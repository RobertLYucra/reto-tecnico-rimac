{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "rootDir": "..",
  "roots": ["<rootDir>/test"],
  "testMatch": ["**/*.e2e-spec.ts", "**/*.usecase.e2e-spec.ts", "**/*.usecase.spec.ts"],

  "transform": { "^.+\\.ts$": "ts-jest" },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "moduleFileExtensions": ["ts", "js", "json"]
}
